{
  "name": "schemary",
  "version": "1.2.2",
  "description": "A schema validation and mapping utility library",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "scripts": {
    "build:dts": "tsc -p tsconfig.build-dts.json && rollup --config rollup/dts.config.js && rm -rf dist/temp-dts",
    "build": "npm run test && npm run lint && npm run clean && npm run build:dts && rollup --config rollup/mini.config.js",
    "clean": "rm -rf dist",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prepublishOnly": "npm run lint && npm run test && npm run build",
    "test": "TARGET_TESTS=unit vitest run --coverage",
    "test:watch": "TARGET_TESTS=unit vitest watch",
    "test:build": "TARGET_TESTS=build vitest run"
  },
  "keywords": [
    "schema",
    "validation",
    "mapping",
    "zod",
    "typescript",
    "dates",
    "timestamps"
  ],
  "author": "BlueRival",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BlueRival/schemary.git"
  },
  "bugs": {
    "url": "https://github.com/BlueRival/schemary/issues"
  },
  "homepage": "https://github.com/BlueRival/schemary#readme",
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.26.0",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/luxon": "^3.6.2",
    "@types/node": "^22.15.14",
    "@vitest/coverage-v8": "^3.1.3",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.4.0",
    "globals": "^16.0.0",
    "luxon": "^3.6.1",
    "prettier": "^3.5.3",
    "rollup": "^4.41.0",
    "rollup-plugin-dts": "^6.2.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.0",
    "vitest": "^3.1.3",
    "zod": "^3.24.4"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}